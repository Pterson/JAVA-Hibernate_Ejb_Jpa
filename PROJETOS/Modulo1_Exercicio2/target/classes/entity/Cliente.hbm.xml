<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Cliente" table="cliente">

        <id name="cpf" column="cpf" type="string">
            <generator class="assigned"/>
        </id>

        <property name="nome" column="nome" type="string"/>
        <property name="dataNasc" column="datanasc" type="date"/>

        <!-- Relacionamento um-para-muitos -->
        <set name="contas" table="conta" inverse="true" cascade="all">
            <key column="cpf"/>
            <one-to-many class="model.Conta"/>
        </set>

    </class>
</hibernate-mapping>