<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Conta" table="conta">

        <id name="idConta" column="idConta" type="int">
            <generator class="increment"/>
        </id>

        <property name="agencia" column="agencia" type="int"/>
        <property name="contaCorrente" column="contacorrente" type="string"/>
        <property name="saldo" column="saldo" type="double"/>

        <!-- Relacionamento muitos-para-um -->
        <many-to-one name="cliente" class="model.Cliente" column="cpf" not-null="true"/>

    </class>
</hibernate-mapping>